AddScreen {
    align: center middle;
}

#dialog {
    grid-size: 2;
    grid-gutter: 0 2;
    grid-rows: 1fr 4;
    padding: 0 1;
    height: 17;
    width: 70;
    border: thick $background 80%;
    background: $surface;
}

#hint {
    column-span: 2;
    height: 1fr;
    width: 1fr;
    content-align: center middle;
}


#input,
#description {
    column-span: 2;
    width: 1fr;
    content-align: center middle;
}

Button {
    width: 100%;
}
